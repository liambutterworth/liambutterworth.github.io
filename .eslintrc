{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "import/resolver": "webpack"
  },
  "rules": {
    "no-return-assign": 0,
    "react/jsx-filename-extension": 0,
    "key-spacing": ["warn", { "align": "value" }],
    "no-multi-spaces": ["warn", { "exceptions": { "Property": true, "VariableDeclarator": true } }],
    "react/jsx-curly-spacing": [ 2, "always", {"spacing": { "objectLiterals": "never" }}],
    "template-curly-spacing": [ "warn", "always" ]
  }
}
