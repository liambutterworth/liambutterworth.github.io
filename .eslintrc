{
  "parser": "babel-eslint",
  "extends": "airbnb",

  "env": {
    "browser": true,
    "node": true
  },

  "settings": {
    "import/resolver": "webpack"
  },

  "rules": {
    "react/jsx-filename-extension": 0,

    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": ["**/*.config.js"],
    }]
  }
}
